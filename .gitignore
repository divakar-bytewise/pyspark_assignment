# Ignore everything by default
*

# Allow the src and test folders
!src/
!test/

# Allow only Python files inside src and test
!src/**/*.py
!test/**/*.py

# Ignore everything else inside src and test except .py files
src/**/*
!src/**/*.py

test/**/*
!test/**/*.py

# Common Python exclusions
__pycache__/
**/__pycache__/
*.pyc
*.pyo
*.log

# Ignore virtual environments
.venv/
venv/

# Ignore IDE/editor-specific files
.idea/
*.iml
*.vscode/
*.DS_Store

# Ignore data/output/temp folders
data/
output/
tmp/
*.json
*.csv
*.parquet
